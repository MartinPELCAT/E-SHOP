{
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
